<Window x:Class="Assignment_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_5"
        mc:Ignorable="d"
        Title="Rocket Math - Main Window" Height="450" Width="765"
        ResizeMode = "NoResize"
        SizeToContent="Manual"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/Image/sky.png"/>
    </Window.Background>
    <Grid Margin="10,-10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="634*"/>
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="Wrap" Text="Enter your Name:" Name="ENameTB" Margin="127,154,388,220" FontFamily="Cascadia Code" FontSize="18" TextAlignment="Right" Grid.ColumnSpan="2"/>
        <Button x:Name="StartGameBTN" Content="Start Game" HorizontalAlignment="Left" Click="StartGameBTN_Click" Height="51" Margin="179,362,0,0" VerticalAlignment="Top" Width="146" RenderTransformOrigin="0.674,0.664" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="18" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="251,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" Name="NameTB" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="18" Grid.Column="1"/>
        <TextBlock TextWrapping="Wrap" Text="Enter your Age:" Name="EAgeTB" Margin="58,197,391,181" FontFamily="Cascadia Code" FontSize="18" TextAlignment="Right" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Height="21" Margin="251,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" Name="AgeTB" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="18" Grid.Column="1"/>
        <RadioButton Content="Addition" HorizontalAlignment="Left" Height="21" Margin="251,241,0,0" VerticalAlignment="Top" Width="118" Name="AdditionRB" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="18" Grid.Column="1"/>
        <RadioButton Content="Subtraction" HorizontalAlignment="Left" Height="21" Margin="251,267,0,0" VerticalAlignment="Top" Width="146" Name="SubtractionRB" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="18" Grid.Column="1"/>
        <RadioButton Content="Multiplication" HorizontalAlignment="Left" Height="21" Margin="251,293,0,0" VerticalAlignment="Top" Width="176" Name="MultiplicationRB" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="18" Grid.Column="1"/>
        <RadioButton Content="Division" HorizontalAlignment="Left" Height="21" Margin="251,319,0,0" VerticalAlignment="Top" Width="106" Name="DivisionRB" TextBlock.FontFamily="Cascadia Code" TextBlock.FontSize="18" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Height="74" Margin="89,68,0,0" TextWrapping="Wrap" Text="Rocket Math" VerticalAlignment="Top" Width="326" FontFamily="Cascadia Code" FontSize="48" Grid.Column="1"/>
        <TextBlock Foreground="Red" TextWrapping="Wrap" Text=" " Name="ErrorMessageTB" Margin="29,119,118,279" FontFamily="Cascadia Code" FontSize="18" Grid.Column="1"/>
        <TextBlock TextWrapping="Wrap" Text="Choose Game Mode:" x:Name="GameModeTB" Margin="18,235,391,136" FontFamily="Cascadia Code" FontSize="18" TextAlignment="Right" Grid.Column="1"/>
    </Grid>
</Window>
