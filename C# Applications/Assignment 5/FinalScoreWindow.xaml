<Window x:Class="Assignment_5.FinalScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_5"
        mc:Ignorable="d"
        Title="Rocket Math - Final Score Window" Height="450" Width="765"
        ResizeMode = "NoResize"
        SizeToContent="Manual"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/Image/sky.png"/>
    </Window.Background>
    <Grid Margin="10,-20,0,0">
        <TextBlock Name="PlayerNameTB" FontSize="24" HorizontalAlignment="Center" Margin="0,99,0,286"/>
        <TextBlock Name="PlayerAgeTB" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,137,0,0" Height="53"/>
        <TextBlock Name="CorrectAnswersTB" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,174,0,0"/>
        <TextBlock Name="IncorrectAnswersTB" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,211,0,0"/>
        <TextBlock Name="ElapsedTimeTB" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,248,0,0"/>
        <Button Name="CloseBTN" Content="Close" Click="CloseBTN_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,352,0,0" Height="72" Width="162" FontFamily="Cascadia Code" FontSize="36"/>
    </Grid>
</Window>
